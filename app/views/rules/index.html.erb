<p id="notice"><%= notice %></p>

<h1>Rules</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Currency</th>
      <th>Count</th>
      <th>Price</th>
      <th>Date from</th>
      <th>Date to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rules.each do |rule| %>
      <tr>
        <td><%= rule.product.description %></td>
        <td><%= rule.currency.abbr %></td>
        <td><%= rule.count %></td>
        <td><%= number_to_currency(rule.price, locale: rule.product.currency.locale) %></td>
        <td><%= rule.date_from %></td>
        <td><%= rule.date_to %></td>
        <td><%= link_to 'Show', rule %></td>
        <td><%= link_to 'Edit', edit_rule_path(rule) %></td>
        <td><%= link_to 'Destroy', rule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

